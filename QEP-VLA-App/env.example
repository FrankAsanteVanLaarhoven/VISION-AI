# QEP-VLA Platform Environment Configuration
# Copy this file to .env and modify values as needed

# =============================================================================
# APPLICATION SETTINGS
# =============================================================================
ENVIRONMENT=development
DEBUG=true
LOG_LEVEL=INFO
SECRET_KEY=your-secret-key-here-change-in-production

# =============================================================================
# SERVER CONFIGURATION
# =============================================================================
HOST=0.0.0.0
PORT=8000
WORKERS=4
RELOAD=true

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
POSTGRES_URL=postgresql://qepvla:qepvla123@localhost:5432/qepvla
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=qepvla
POSTGRES_USER=qepvla
POSTGRES_PASSWORD=qepvla123

# =============================================================================
# REDIS CONFIGURATION
# =============================================================================
REDIS_URL=redis://localhost:6379
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=

# =============================================================================
# BLOCKCHAIN CONFIGURATION
# =============================================================================
BLOCKCHAIN_ENDPOINT=http://localhost:8545
BLOCKCHAIN_NETWORK=localhost
WEB3_PROVIDER_URI=http://localhost:8545
CONTRACT_ADDRESS=

# =============================================================================
# QUANTUM PRIVACY SETTINGS
# =============================================================================
QUANTUM_ENHANCEMENT_FACTOR=2.3
PRIVACY_BUDGET_EPSILON=0.1
PRIVACY_BUDGET_DELTA=1e-5
QUANTUM_NOISE_INJECTION=true
ENTANGLEMENT_MASKING=true
SUPERPOSITION_ENCODING=true

# =============================================================================
# FEDERATED LEARNING SETTINGS
# =============================================================================
FEDERATED_ROUNDS=100
MIN_CLIENTS=5
MAX_CLIENTS=100
LOCAL_EPOCHS=5
LEARNING_RATE=0.001
BATCH_SIZE=32

# =============================================================================
# EDGE COMPUTING SETTINGS
# =============================================================================
EDGE_MAX_LATENCY_MS=50.0
EDGE_MEMORY_LIMIT_GB=2.0
EDGE_DEVICE_TYPE=cuda
EDGE_MODEL_COMPRESSION=true

# =============================================================================
# MONITORING & METRICS
# =============================================================================
PROMETHEUS_ENABLED=true
PROMETHEUS_PORT=9090
GRAFANA_ENABLED=true
GRAFANA_PORT=3000
GRAFANA_USER=admin
GRAFANA_PASSWORD=admin

# =============================================================================
# SECURITY SETTINGS
# =============================================================================
ENCRYPTION_ALGORITHM=AES-256-GCM
KEY_ROTATION_DAYS=7
QUANTUM_RESISTANT=true
JWT_SECRET=your-jwt-secret-here
JWT_ALGORITHM=HS256
JWT_EXPIRATION_HOURS=24

# =============================================================================
# DATA RETENTION SETTINGS
# =============================================================================
RAW_SENSOR_DATA_RETENTION=24h
PROCESSED_FEATURES_RETENTION=7d
AGGREGATED_MODELS_RETENTION=30d
PRIVACY_REPORTS_RETENTION=1y

# =============================================================================
# EXTERNAL SERVICES
# =============================================================================
# OpenAI API (for language processing)
OPENAI_API_KEY=your-openai-api-key-here
OPENAI_MODEL=gpt-4

# AWS S3 (for model storage)
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=us-west-2
AWS_S3_BUCKET=qep-vla-models

# =============================================================================
# DEVELOPMENT SETTINGS
# =============================================================================
# Only set these in development environment
DEV_MOCK_QUANTUM_SENSORS=true
DEV_SKIP_BLOCKCHAIN_VALIDATION=false
DEV_FAST_TRAINING=false
DEV_DEBUG_MODE=true

# =============================================================================
# LOGGING CONFIGURATION
# =============================================================================
LOG_FILE_PATH=logs/qep_vla.log
LOG_MAX_SIZE_MB=100
LOG_BACKUP_COUNT=5
LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s

# =============================================================================
# PERFORMANCE SETTINGS
# =============================================================================
MAX_CONCURRENT_REQUESTS=100
REQUEST_TIMEOUT_SECONDS=30
CACHE_TTL_SECONDS=3600
MODEL_CACHE_SIZE=10

# =============================================================================
# PRIVACY COMPLIANCE
# =============================================================================
GDPR_COMPLIANCE=true
CCPA_COMPLIANCE=true
HIPAA_COMPLIANCE=false
DATA_ANONYMIZATION=true
CONSENT_MANAGEMENT=true
